{
  "name": "@monolith/cli",
  "version": "0.1.0",
  "description": "CLI tool for Monolith module system - shadcn/ui inspired plugin manager for Elysia",
  "type": "module",
  "bin": {
    "monolith": "./dist/index.js"
  },
  "exports": {
    ".": "./src/index.ts",
    "./types": "./src/types/index.ts"
  },
  "scripts": {
    "build": "bun build --compile --outfile ./dist/monolith ./src/index.ts && chmod +x ./dist/monolith",
    "dev": "bun run src/index.ts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "format": "bunx ultracite check src",
    "format:fix": "bunx ultracite write src"
  },
  "dependencies": {
    "@clack/prompts": "^0.8.2",
    "commander": "^12.1.0",
    "diff": "^7.0.0",
    "picocolors": "^1.1.1",
    "ts-morph": "^24.0.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/diff": "^6.0.0",
    "@types/node": "^20.17.0",
    "typescript": "^5.6.3"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "cli",
    "elysia",
    "monolith",
    "plugin-system"
  ]
}
