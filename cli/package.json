{
  "name": "@monolith/cli",
  "version": "0.1.0",
  "description": "CLI tool for Monolith module system - shadcn/ui inspired plugin manager for Elysia",
  "type": "module",
  "bin": {
    "monolith": "./dist/index.js"
  },
  "exports": {
    ".": "./src/index.ts",
    "./types": "./src/types/index.ts"
  },
  "scripts": {
    "dev": "bun run ./src/index.ts",
    "build": "pkgroll",
    "build:post": " chmod +x ./dist/monolith",
    "prepublishOnly": "bun run build ",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "citty": "^0.2.1",
    "consola": "^3.4.2",
    "prompts": "^2.4.2",
    "diff": "^8.0.3",
    "picocolors": "^1.1.1",
    "ts-morph": "^27.0.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/diff": "^8.0.0",
    "@types/node": "^25.3.2",
    "@types/prompts": "^2.4.9",
    "pkgroll": "^2.27.0",
    "typescript": "^5.9.3"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "cli",
    "elysia",
    "monolith",
    "plugin-system"
  ]
}