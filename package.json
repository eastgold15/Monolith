{
  "name": "monolith-modules",
  "version": "0.1.0",
  "description": "Monorepo for Elysia framework modules - shadcn/ui inspired plugin system",
  "private": true,
  "type": "module",
  "workspaces": [
    "cli",
    "templates/*"
  ],
  "scripts": {
    "dev": "bun run cli/src/index.ts",
    "build": "bun run cli/build.ts",
    "build:cli": "bun build --compile --outfile ./dist/monolith ./cli/src/index.ts",
    "test": "bun test",
    "lint": "eslint .",
    "format": "ultracite check .",
    "format:fix": "ultracite write ."
  },
  "devDependencies": {
    "@types/node": "^20.17.0",
    "typescript": "^5.6.3",
    "ultracite": "^1.3.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "elysia",
    "bun",
    "drizzle",
    "plugin",
    "module-system",
    "shadcn-like"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/Monolith"
  }
}
